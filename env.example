# Admin Secret - Required to access admin panel
ADMIN_SECRET=your-secret-admin-password-here

# Vote Password - Required to cast votes via API
VOTE_PASSWORD=your-secret-vote-password-here

# Database URL (for local dev, use relative path; in Docker, use /app/data/votes.db)
DATABASE_URL=sqlite:///data/votes.db

# Flask Secret Key
SECRET_KEY=your-random-secret-key-here


